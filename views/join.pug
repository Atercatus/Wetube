extends layouts/main

block content
    .form-container
        if errmsg
            .form__errmsg=errmsg
        form(action=routes.join, method="post")
            input(type="text", name="userId", placeholder="ID", required=true)
            input(type="text", name="nickname", placeholder="Full Name", required=true)
            input(type="emial", name="email", placeholder="Email", required=true)
            input(type="password", name="password", placeholder="Password", required=true)
            input(type="password", name="confirmPasswd", placeholder="Verify Password", required=true)
            input(type="submit", value="Join Now")
        include partials/socialLogin